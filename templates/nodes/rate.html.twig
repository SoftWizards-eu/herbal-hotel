<section class="contact-form rate-form wrap" id="contact{{ module.id }}">
    <h2>Wyślij opinię</h2>
    <div class="bg">
    <div id="rate-form">
    {% if app.session.flashbag.has('info' ~ module.id) %}
        {% for flash in app.session.flashbag.get('info' ~ module.id) %}
            <div class="info-box" id="ibox{{module.id}}">
                {{ flash }}
            </div>
        {% endfor %}
    {% endif %}    
    {{ form_start(form) }}
    <input type="hidden" name="_module" value="{{ module.id }}" />
    {{ form_errors(form) }}
    <div class="row">
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
    </div>
    
    
    <div class="row triple-row">
        {{ form_row(form.comment) }}
    </div>
    <div class="clear-fix"></div>
    <div class="categories">
        {%  for child in form %}
            {% if 'val_' in child.vars.name %}
            <div class="rate">
                <label>{{ child.vars.label}}</label>
                <div class="rate-input editable" data-id="{{ child.vars.id }}">
                    {% for i in 1..5 %}
                    <span class="rate {{ child.vars.value >= i ? 'active' : '' }}" data-val="{{ i }}"></span>
                    {% endfor %}
                </div>
            </div>
            
            {% endif %}
        {% endfor %}
    </div>
    <div class="btns">
        <input class="submit" type="submit" name="" class="submit" value="wyślij"/>
    </div>
 {{ form_end(form) }} 
 </div>
    {% if items|length > 0 %}
    <h2>Inne opinie</h2>
    <div class="rates">
        {% for rate in items %}
           <div class="comm">
                <h5>{{ rate.name }}</h5>
                {% if rate.comment|trim %}
                <p class="comment">{{ rate.comment }}</p>
                {% endif %}
                <div class="categories">
                    {% for cat in rate.values %}
                    <div class="rate">
                        <label>{{ cat.category.name }}</label>
                        <div class="rate-input">
                            {% for i in 1..5 %}
                            <span class="rate {{ cat.value >= i ? 'active' : '' }}"></span>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
           </div>
        {% endfor %}
         {% include 'nodes/pagging.html.twig' with {
            pages : pages,
            current: page
         } %}
    
    </div>
    {% endif %}
    <div class="clear-fix"></div>
 </div>
</section>
